import requests

url = "https://brapi.dev/api/quote/PETR4"
params = {
    'modules': 'summaryProfile',
    'token': '4Rgd828GN7h8cLkUrxP1gK',  # Substitua pelo seu token
}

response = requests.get(url, params=params)

if response.status_code == 200:
    data = response.json()
    print("Resposta da Solicitação:")
    print("Ticker:", data['results'][0]['symbol'])
    print("Nome:", data['results'][0]['longName'])
    print("Setor:", data['results'][0]['summaryProfile']['sectorDisp'])
    print("Indústria:", data['results'][0]['summaryProfile']['industryDisp'])
    print("Site:", data['results'][0]['summaryProfile']['website'])
    print("Telefone:", data['results'][0]['summaryProfile']['phone'])
    print("Endereço:", data['results'][0]['summaryProfile']['address1'])
    print("Cidade:", data['results'][0]['summaryProfile']['city'])
    print("Estado:", data['results'][0]['summaryProfile']['state'])
    print("País:", data['results'][0]['summaryProfile']['country'])
    print("Descrição da Empresa:", data['results'][0]['summaryProfile']['longBusinessSummary'])
else:
    print(f"Requisição falhou com código de status {response.status_code}")
