# Adicione comentários descritivos para explicar a função de seções específicas

<SplashScreen>:
    name: 'splash'
    MDFloatLayout:
        # Use constantes para as cores
        md_bg_color: [28/255, 20/255, 53/255, 1]  # Cor de fundo

        Image:
            source: "images/docs2.png"
            size_hint: .60, .60
            pos_hint: {"center_x": .50, "center_y": .75}
            canvas.before:
                Color:
                    rgba: [28/255, 20/255, 53/255, 1]  # Cor de fundo

        MDTextField:
            id: search_input
            hint_text: "Ação/Empresa"
            pos_hint: {"center_x": 0.5, "center_y": .40}
            size_hint_x: 0.8
            on_text_validate: app.search_company(self.text)
            line_color_normal: [109/255, 40/255, 217/255, 1]  # Cor da linha
            mode: "rectangle"  # Modo retangular
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto

        MDRaisedButton:
            text: "Pesquisar"
            elevation_normal: 0
            pos_hint: {"center_x": .5, "center_y": .25}
            md_bg_color: [28/255, 20/255, 53/255, 1]  # Cor do botão
            on_release:
                app.search_company(search_input.text)

        MDLabel:
            text: "YouFin"
            pos_hint: {"center_x": .5, "center_y": .57}
            halign: "center"
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto
            font_size: "30sp"
            font_name: "Poppins-SemiBold.ttf"

        MDLabel:
            text: "Monitore suas ações"
            pos_hint: {"center_x": .5, "center_y": .50}
            halign: "center"
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto
            font_size: "13sp"

<SecondScreen>:
    name: 'second'
    MDFloatLayout:
        md_bg_color: [28/255, 20/255, 53/255, 1]  # Cor de fundo

        MDLabel:
            id: simbolo_label
            pos_hint: {"center_x": .15, "center_y": .65}
            halign: "center"
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto
            font_size: "13sp"

        MDLabel:
            id: nome_label
            pos_hint: {"center_x": .5, "center_y": .93}
            halign: "center"
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto
            font_size: "18sp"

        MDLabel:
            id: cotacao_label
            pos_hint: {"center_x": .65, "center_y": .80}
            halign: "center"
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto
            font_size: "30sp"

        MDLabel:
            id: preco_anterior_label
            pos_hint: {"center_x": .65, "center_y": .75}
            halign: "center"
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto
            font_size: "13sp"

        MDLabel:
            id: volume_label
            pos_hint: {"center_x": .5, "center_y": .10}
            halign: "center"
            theme_text_color: "Custom"
            text_color: [109/255, 40/255, 217/255, 1]  # Cor do texto
            font_size: "13sp"

        Image:
            id: logo_image
            source: root.ids.logo_image.source
            size_hint: None, None
            size: dp(100), dp(100)
            pos_hint: {"center_x": .15, "center_y": .80}


        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.8, 0.4)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Chart:
                id: chart_widget
                x_labels: [1, 2, 3, 4, 5]
                y_values: [10, 12, 8, 15, 7]
                xlabel: 'X-axis'
                ylabel: 'Y-axis'